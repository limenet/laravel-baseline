{
    "name": "limenet/laravel-baseline",
    "description": "A highly opinionated Laravel baseline.",
    "keywords": [
        "Linus Metzler",
        "laravel",
        "laravel-baseline"
    ],
    "homepage": "https://github.com/limenet/laravel-baseline",
    "license": "MIT",
    "authors": [
        {
            "name": "Linus Metzler",
            "email": "hi@linusmetzler.me",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "ext-simplexml": "*",
        "composer/semver": "^3.4",
        "illuminate/contracts": "^12.0",
        "nikic/php-parser": "^5.6.2",
        "phpstan/phpstan": "^2.1.8",
        "rector/rector": "^2.3",
        "spatie/laravel-package-tools": "^1.16",
        "symfony/finder": "^7.0",
        "symfony/yaml": "^7.0"
    },
    "require-dev": {
        "larastan/larastan": "^3.8.0",
        "laravel/framework": "^12.40.0",
        "laravel/pint": "^1.25.1",
        "mockery/mockery": "^1.6.10",
        "nunomaduro/collision": "^8.8.3",
        "orchestra/testbench": "^10.2.0",
        "pestphp/pest": "^4.3.2",
        "pestphp/pest-plugin-arch": "^4.0",
        "pestphp/pest-plugin-laravel": "^4.0",
        "phpstan/extension-installer": "^1.4.3",
        "phpstan/phpstan-deprecation-rules": "^2.0.3",
        "phpstan/phpstan-phpunit": "^2.0.7",
        "spatie/temporary-directory": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Limenet\\LaravelBaseline\\": "src/",
            "Limenet\\LaravelBaseline\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Limenet\\LaravelBaseline\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse --memory-limit=1G",
        "test": "php -d memory_limit=512M vendor/bin/pest",
        "test-coverage": "php -d memory_limit=512M vendor/bin/pest --coverage",
        "format": "vendor/bin/pint --parallel"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Limenet\\LaravelBaseline\\LaravelBaselineServiceProvider"
            ],
            "aliases": {
                "LaravelBaseline": "Limenet\\LaravelBaseline\\Facades\\LaravelBaseline"
            }
        },
        "phpstan": {
            "includes": [
                "extension.neon"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
